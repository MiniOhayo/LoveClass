<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- <item android:drawable="@drawable/alert_select" android:state_checked="true"/> -->

    <item android:state_checked="false"><shape>
            <solid android:color="@color/main_title" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />

            <corners android:bottomLeftRadius="2dp" android:topLeftRadius="2dp" />

            <stroke android:width="2px" android:color="#333333" />
        </shape></item>
    <item android:state_checked="true"><shape>
            <solid android:color="#333333" />

            <stroke android:width="2px" android:color="#333333" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />

            <corners android:bottomLeftRadius="2dp" android:topLeftRadius="2dp" />
        </shape></item>

</selector>